function even(arr) {
  let evenArr = [];
  for (let i = 0; i < arr.length; i++) {
    if (arr[i] % 2 === 0) {
      evenArr.push(arr[i]);
    }
  }
  return evenArr;
}

let originalArr = [2, 7, 4];
let evenArr = even(originalArr);

console.log("Original Array: " + originalArr);
console.log("Even Array: " + evenArr);
